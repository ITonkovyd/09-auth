{
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "printWidth": 80,
  "tabWidth": 2,
  "trailingComma": "es5",
  "semi": true,
  "singleQuote": false,
  "importOrder": [
    "^react$",
    "^next/(.*)$",
    "^@/(.*)$",
    "^[./]"
  ],
  "importOrderSortSpecifiers": false,
  "importOrderSeparationStyle": "single",
  "format": "prettier --write",
  "importOrderParserPlugins": ["typescript", "jsx", "decorators-legacy"]
}
